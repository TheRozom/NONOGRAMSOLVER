<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER_LEFT" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="viewnonogram.demononogram.NController">
    <padding>
        <Insets left="20.0" right="20.0" top="20.0" bottom="20.0"/>
    </padding>

    <GridPane fx:id="gridPane" alignment="CENTER" hgap="5.0" vgap="5.0"/>

    <Button text="Load Task" onAction="#onLoadTaskButtonClick" prefWidth="200" prefHeight="50"/>
    <Button text="Hint" onAction="#onHintButtonClick" prefWidth="200" prefHeight="50"/>
    <Button text="Solve" onAction="#onSolveButtonClick" prefWidth="200" prefHeight="50"/>

</VBox>
